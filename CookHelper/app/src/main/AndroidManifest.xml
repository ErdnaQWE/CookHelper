<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.johicmes.cookhelper">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Help" />
        <activity
            android:name=".RecipeView"
            android:label="@string/title_activity_recipe_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RecipeCreate"
            android:label="@string/title_activity_recipe_create"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".IngredientView" />
        <activity android:name=".StepsView"></activity>
    </application>

</manifest>