<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:elevation="2dp"
        android:padding="8dp"
        android:paddingBottom="8dp"
        android:paddingEnd="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recipeView">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_height="190dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/template" />


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left">

                <TextView
                    android:text="Lorem Ipsum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textNom"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="24dp"
                    android:textSize="24sp"
                    android:layout_below="@+id/thumbnail"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/primary_text_material_light"
                    android:layout_weight="1" />

                <TextView
                    android:text="8/10"
                    android:layout_width="82dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/texteElementContenue"
                    android:layout_gravity="center"
                    android:paddingTop="24dp"
                    android:textSize="18sp"
                    android:textAlignment="center" />

            </LinearLayout>

            <TextView
                android:text="CatÃ©gorie | Type de plat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textCategorieEtType"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_below="@+id/textNom"
                android:layout_alignParentStart="true" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:layout_gravity="right|center">

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="9" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView3"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_action_heart"
                    />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView4"
                    android:layout_weight="1"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    app:srcCompat="@drawable/ic_mode_edit" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
